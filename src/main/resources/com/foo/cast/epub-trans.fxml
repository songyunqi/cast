<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.foo.cast.EpubTransController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <Label fx:id="epubFilePath" text="epub文件路径"/>
    <Button fx:id="fileChoose" text="选择..." onAction="#onFileChooseClick"/>
    <Button fx:id="trans" text="转换" onAction="#onTransClick"/>
    <TextField fx:id="scriptFilePath"/>
</VBox>
